{
    "type": "module",
    "imports": {
        "#cmp/*": "./src/components/*",
        "#root/*": "./*"
    },
    "engines": {
        "node": ">=14"
    },
    "scripts": {
        "dev": "vite",
        "build": "npm run build:client && npm run build:server",
        "build:client": "vite build",
        "build:server": "vite build --ssr",
        "serve": "vite preview"
    },
    "devDependencies": {
        "@roxi/routify": "^3.0.0-next.94",
        "@sveltejs/vite-plugin-svelte": "^1.0.0-next.26",
        "axios": "^0.21.1",
        "mdsvex": "^0.9.3",
        "npm-run-all": "^4.1.5",
        "polykit": "^0.0.1-8",
        "spank": "^2.0.0-5",
        "svelte": "^3.39.0",
        "svelte-prism": "^1.1.6",
        "vite": "^2.9.6"
    },
    "routify": {
        "plugins": [
            "plugins/indexByName",
            "plugins/ownSourceMetaPlugin"
        ]
    },
    "prettier": {
        "singleQuote": true,
        "quoteProps": "as-needed",
        "trailingComma": "all",
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "semi": false,
        "useTabs": false,
        "tabWidth": 4,
        "printWidth": 90,
        "svelteSortOrder": "options-scripts-markup-styles",
        "svelteAllowShorthand": true,
        "svelteBracketNewLine": false,
        "svelteIndentScriptAndStyle": true
    }
}
